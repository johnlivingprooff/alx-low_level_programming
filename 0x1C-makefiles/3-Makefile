CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm -f

$(NAME): main.o school.o
	$(CC) $(OBJ) -o $@

main.o: main.c
	$(CC) -c main.c -o $@

school.o: school.c
	$(CC) -c school.c -o $@

all: $(NAME)

clean:
	$(RM) *~ school

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all